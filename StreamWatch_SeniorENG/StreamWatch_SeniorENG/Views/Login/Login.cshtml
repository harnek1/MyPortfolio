@model StreamWatch_SeniorENG.Models.Login

@{
    ViewData["Title"] = "Login";
}


<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.ValidationMessage("Email/PasswordWrong", new { @class = "text-center text-danger" })
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <br/>
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <br />
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home Page</a>
</div>

<div>
    <br />
    <a asp-controller="User" asp-action="ForgotPassword" class="btn btn-secondary">Forgot Password</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
